# infra/docker-compose.override.yml
version: "3.8"
networks: { dataops: {} }
services:
  minio:
    image: minio/minio:latest
    command: server /data --console-address ":9001"
    ports: ["9000:9000", "9001:9001"]
    environment:
      MINIO_ROOT_USER: minio
      MINIO_ROOT_PASSWORD: minio12345
    volumes: ["minio-data:/data"]
    networks: ["dataops"]

  mart-db:
    image: postgres:16
    environment:
      POSTGRES_USER: mart
      POSTGRES_PASSWORD: mart
      POSTGRES_DB: mart
    ports: ["5433:5432"]
    volumes: ["mart-data:/var/lib/postgresql/data"]
    networks: ["dataops"]

volumes:
  minio-data:
  mart-data:
